<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<base href="/#" />
	<title>@(ViewBag.Title ?? "Page Title")</title>

	<!-- Le HTML5 shim & companions, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
	  <script src="/Scripts/html5shiv.js"></script>
	<script src="~/Scripts/respond.js"></script>
	<![endif]-->
	<!-- no kiddin' ! IE 8 freaks out for console.log() -->
	<script src="~/Scripts/Healer.js"></script>
	<script type="text/javascript">
		if (!window.console)
			console = { log: function () { } };
	</script>


	@Styles.Render("~/Content/css")

	<!--Modernizr-->
	@Scripts.Render("~/bundles/modernizr")

	<!--Bootstrap styles-->
	@Styles.Render("~/Content/bootstrap")

	<!--AngularUI Styles-->
	@Styles.Render("~/Content/angularui")

	<!--Font Awesome-->
	@Styles.Render("~/Content/fonts")


	@{
		var baseUrl = PreQualificationApp.Helpers.BaseUrlHelper.getBaseUrl(false);
	}

	<script type="text/javascript">
		rootUrl = "@baseUrl";
		if (rootUrl.substring(rootUrl.length - 1) !== '/') {
			rootUrl += '/';
		}

	</script>



</head>
<body data-ng-app="app" class="container-fluid">


	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header" data-ng-controller="headerController">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" data-ng-href="{{getHref('#/Register')}}">Home</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse" data-ng-controller="headerController">
				<ul class="nav navbar-nav">
					<li data-ng-class="{ active: isActive('/Register')}"><a data-ng-href="{{getHref('#/Register')}}">Apply</a></li>
					<li data-ng-class="{ active: isActive('/Support')}"><a data-ng-href="{{getHref('#/Support')}}">Support</a></li>
					<li data-ng-class="{ active: isActive('/About')}"><a data-ng-href="{{getHref('#/About')}}">About</a></li>

				</ul>

			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>

	</div>

	@RenderBody()


	@Scripts.Render("~/bundles/jquery")
	@*@Scripts.Render("~/bundles/jqueryval")*@
	@Scripts.Render("~/bundles/bootstrap")

	@Scripts.Render("~/bundles/angular")
	@Scripts.Render("~/bundles/angularui")
	@Scripts.Render("~/bundles/app")
	@RenderSection("scripts", required: false)
</body>
</html>